<%= form_with model: @user, local: false  do |form| %>
  <div class="modal-body">
    <% if @user.errors.full_messages.any? %>
      <%= render "shared/error", object: @user %>
    <% end %>
    <%= form.label :name %><br>
    <div class="mb-3">
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <%= form.label :email %><br>
    <div class="mb-3">
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <%= form.label :contact %><br>
    <div class="mb-3">
      <%= form.text_field :contact_number, class: "form-control" %>
    </div>
    <%= form.label :password %><br>
    <div class="mb-3">
      <%= form.password_field :password, class: "form-control" %>
    </div>
    <div class="field">
      <%= form.label "click here for signup as a admin" %>
      <%= form.check_box :is_admin %> <br>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-lg close-modal" data-dismiss="modal">Close</button>
    <%= form.submit "signup",class: "btn btn-primary btn-lg" %>
  </div>
<% end %> 
