<div style="min-height:72vh">
  <h1>All Orders</h1>
  <div class="row">
    <% @orders.each do |order| %> 
        <div class="col-md-4">
          <div class="card">
            <table class="table table-hover table-striped table-primary h5">
              <tr>
                <td>
                  Date:-  
                </td>
                <td>
                  <%= order.created_at.strftime("%d/%m/%Y %H:%M") %>
                </td>
              </tr>
              <tr>
                <td>
                  Address:- 
                </td>
                <td>
                  <%= order.address %>
                </td>
              </tr>
              <tr>
                <td>
                  Total Amount:-  
                </td>
                <td>
                  <%= order.total_amount %>
                </td>
              </tr>
              <tr>
                <td>
                  show more details:-  
                </td>
                <td>
                  <%= link_to "click",order_path(order), class:"btn btn-sm btn-primary" %>
                </td>
              </tr>
            </table>
          </div>
        </div>
    <% end %>
  </div>
</div>
